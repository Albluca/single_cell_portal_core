<div class="well well-sm">
	<div class="form-group row">
		<div class="col-sm-4">
			<%= f.label :name %><br />
			<%= f.text_field :name, class: 'form-control', readonly: true %>
		</div>
		<div class="col-sm-7">
			<%= f.label :description %><br />
			<%= f.text_field :description, class: 'form-control' %>
		</div>
		<div class="col-sm-1">
			<%= f.link_to_remove "<span class='fa fa-times'></span>".html_safe, class: 'btn btn-danger pull-right delete-btn', data: {confirm: 'Are you sure?  This cannot be undone unless you reload the page without saving.'} %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4">
			<%= f.label :file_type %><br />
			<%= f.select :file_type, options_for_select(StudyFile::STUDY_FILE_TYPES, f.object.file_type), {}, {class: 'form-control'} %>
		</div>
		<div class="col-sm-7">
			<%= f.label :data, 'File' %><br />
			<%= f.file_field :data, class: 'form-control' %>
		</div>
	</div>
</div>