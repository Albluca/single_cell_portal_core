<%= nested_form_for(@study, html: {multipart: true}) do |f| %>
	<% if @study.errors.any? %>
		<div id="bs-callout bs-callout-danger">
			<h2><%= pluralize(@study.errors.count, "error") %> prohibited this study from being saved:</h2>

			<ul>
				<% @study.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.hidden_field :user_id, value: @study.new_record? ? current_user._id : @study.user_id %>
	<div class="form-group row">
		<div class="col-md-9">
			<%= f.label :name %><br/>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="col-md-3">
			<%= f.label :public %><br />
			<%= f.select :public, options_for_select([['Yes',1],['No',0]], @study.public? ? 1: 0), {}, {class: 'form-control'} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.cktext_area :description %>
	</div>
  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-lg btn-success' %>
  </div>
<% end %>