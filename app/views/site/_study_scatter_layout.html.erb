var size = $('#cluster-plot').actual('width') * SCATTER_RATIO;

var layout = {
    hovermode: 'closest',
    font: plotlyLabelFont,
    width: size,
    height: size,
    legend: {
        x: 100,
        y: 1
    }
}

<% if @cluster.cluster_type == '3d' %>
  var currentCamera = $('#cluster-plot').data('camera');
  layout.scene = {
      camera: currentCamera,
      xaxis: {
          range: <%= raw @range[:x] %>,
          title: '<%=  @axes[:x] %>'
      },
      yaxis: {
          range: <%= raw @range[:y] %>,
          title: '<%= @axes[:y] %>'
      },
      zaxis: {
          range: <%= raw @range[:z] %>,
          title: '<%= @axes[:z] %>'
      },
      <% if @cluster.has_range? %>
        aspectmode: '<%= @aspect[:mode] %>',
        aspectratio: {
          x: <%= @aspect[:x] %>,
          y: <%= @aspect[:y] %>,
          z: <%= @aspect[:z] %>
        }
      <% else %>
        aspectmode: 'cube'
      <% end %>
  };

<% else %>
  layout.xaxis = {
      range: <%= raw @range[:x] %>,
      title: '<%=  @axes[:x] %>'
  };

  layout.yaxis = {
      range: <%= raw @range[:y] %>,
      title: '<%= @axes[:y] %>'
  };
<% end %>