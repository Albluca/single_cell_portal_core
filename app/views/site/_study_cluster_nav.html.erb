<%= form_tag(render_cluster_path(study_name: params[:study_name]), class: 'form-inline navigation-form spin', id: 'select-cluster', method: :get, remote: true) do %>
	<%= label_tag :cluster, 'Select sub-cluster' %><br />
	<%= select_tag :cluster, options_for_select(@options, params[:cluster]), class: 'form-control' %>
<% end %>

<%= javascript_tag do %>

	$("#cluster").change(function() {
		if ($("#cluster").val() == "") {
			window.location.href = "<%= view_study_url(study_name: params[:study_name]) %>";
		} else {
			$("#select-cluster").submit();
		}
	});

<% end %>