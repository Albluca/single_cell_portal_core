<%= form_tag(render_cluster_path(study_name: params[:study_name]), class: 'form-inline navigation-form', id: 'select-cluster', method: :get, remote: true) do %>
	<%= label_tag :cluster, 'Select sub-cluster' %><br />
	<%= select_tag :cluster, options_for_select(@options, params[:cluster]), class: 'form-control' %>
<% end %>

<%= javascript_tag do %>

	$("#cluster").change(function() {
		var url = $("#select-cluster").attr('action');
		var target = document.getElementById('cluster-plot');
		var spinner = new Spinner(opts).spin(target);
		$(target).data('spinner', spinner);
		var cluster = $('#cluster').val();
		if (cluster == "") {
			$.get(url);
		} else {
			$.get(url + '?cluster=' + cluster);
		}
	});

<% end %>