<% if @main_genes.nil? %>
	<em><%= @genes.map {|g| link_to g.gene, "http://www.ncbi.nlm.nih.gov/gene/?term=#{g.gene}[sym]", 'data-toggle' => 'tooltip', title: "Search Entrez for '#{g.gene}'", 'data-placement' => 'right'}.join(', ').html_safe %></em>
<% else %>
	<em><%= @main_genes.map {|g| link_to g.gene, "http://www.ncbi.nlm.nih.gov/gene/?term=#{g.gene}[sym]", 'data-toggle' => 'tooltip', title: "Search Entrez for '#{g.gene}'", 'data-placement' => 'right'}.join(', ').html_safe %></em>... <%= link_to "#{@other_genes.size} more", '#', 'data-toggle' => 'popover', 'data-trigger' => 'focus', 'data-content' => "#{@other_genes.map {|g| link_to g.gene, "http://www.ncbi.nlm.nih.gov/gene/?term=#{g.gene}[sym]"}.join(', ') }", 'data-html' => true, class: 'btn btn-primary more-genes' %>
<% end %>