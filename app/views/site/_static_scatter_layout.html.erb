	var staticSize = $('#reference-plot').width();

	var staticLayout = {
		title: '<%= "#{params[:cluster]} (#{@selected_annotation[:name]})" %> Cluster Reference',
		font: plotlyLabelFont,
		titlefont: plotlyTitleFont,
		showlegend: false,
		width: staticSize,
		height: staticSize
	};

  <% if @cluster.cluster_type == '3d' %>
    var staticCamera = $('#expression-plots').data('scatter-camera');
    staticLayout.scene = {
      camera: staticCamera,
      xaxis: {
          range: <%= raw @static_range[:x] %>
      },
      yaxis: {
          range: <%= raw @static_range[:y] %>
      },
      zaxis: {
          range: <%= raw @static_range[:z] %>
      },
      <% if @cluster.has_range? %>
        aspectmode: '<%= @static_aspect[:mode] %>',
        aspectratio: {
          x: <%= @static_aspect[:x] %>,
          y: <%= @static_aspect[:y] %>,
          z: <%= @static_aspect[:z] %>
        }
      <% else %>
        aspectmode: 'cube'
      <% end %>
    };
  <% else %>
    staticLayout.xaxis = {
        range: <%= raw @static_range[:x] %>
    };

    staticLayout.yaxis = {
        range: <%= raw @static_range[:y] %>
    };
  <% end %>