<div class="jumbotron">
	<h1 class="lead text-center">Single Cell Portal</h1>
	<p class="lead text-center">Prototype visualization portal for single cell RNA-seq data.</p>
</div>
<h2 class="study-lead"><span class="fa fa-book"></span> Studies & Downloads</h2>
<div class="panel-group" id="downloads">
	<% @studies.each_with_index do |study, index| %>
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="panel-title">
					<h4><%= link_to "#{study.name} <span class='fa fa-chevron-#{ index == 0 ? 'down' : 'right' }'></span>".html_safe, "##{study.url_safe_name}", "data-toggle" => "collapse", 'data-parent' => '#downloads', style: 'color: white;'  %></h4>
				</div>
			</div>
			<div id="<%= study.url_safe_name %>" class="panel-collapse collapse <%= index == 0 ? 'in' : nil %>">
				<div class="panel-body">
					<div class="row">
						<div class="col-sm-2">
							<%= link_to "<span class='fa fa-search'></span> View Study".html_safe, view_study_path(study_name: study.url_safe_name), class: 'btn btn-success btn-lg btn-block' %>
						</div>
						<div class="col-sm-9">
							<%= study.description.html_safe %>
						</div>
					</div>
						<h3><span class="fa fa-files-o"></span> Study Files</h3>
						<div class="table-responsive">
							<table class="table table-striped table-condensed">
								<thead>
									<tr>
										<th>Filename</th>
										<th>Description</th>
										<th>Download</th>
									</tr>
								</thead>
								<tbody>
									<% @downloads[study.url_safe_name].each do |study_file| %>
										<tr>
											<td class="col-md-5"><%= study_file.name %></td>
											<td class="col-sm-6"><%= study_file.description %></td>
											<td class="col-sm-1"><%= link_to "<span class='fa fa-download'></span> #{number_to_human_size(study_file.file_size, prefix: :si)}".html_safe, study_file.download_path, class: 'btn btn-primary btn-block', download: study_file.name %></td>
										</tr>
									<% end %>
								</tbody>
							</table>
						</div>
				</div>
			</div>
		</div>
	<% end %>
</div>